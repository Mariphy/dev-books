---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const books = await getCollection('books');
---

<Layout title="Dev Books, books for programmers.">
	<main>
		<h2 class="text-center text-7xl font-extrabold">Dev 
			<span class="block">Books</span></h2>
	</main>

	<section aria-label="Libros recomendados para programadores">
		<div class="px-4 mx-auto max-w-screen-xl">
			<div class="grid gap-6 md:grid-cols-2">
				{
					books.map((book) => {
						const { slug, data } = book;
						const  {title, author, img, readtime, description, buy } = data;

						return (
							<article>
								<img src={`/${img}`} alt={title} class="w-full rounded-lg" />
								<h3>{title}</h3>
							</article>	
						)
					})
				}
			</div>
		</div>	
	</section>	
</Layout>


